<div class="container">

  <div class="title">

    <h1>Burgers!</h1>

  </div>
  <div class="burgerBox">

    <div class="dispFalse">

      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}} {{#unless devoured}}
        <p>{{burger_name}}
          <button class="devour" data-id="{{id}}" data-devour="{{true}}">
            DEVOUR</p>
        </button>
        {{/unless}} {{/each}}
      </ul>

    </div>

    <div class="dispTrue">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}} {{#if devoured}}
        <p>{{burger_name}}</p>
        {{/if}} {{/each}}
      </ul>

    </div>
  </div>


  <div class="createArea">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>